
<form id='note' class="form-horizontal" method="POST" action="/notes" >
  <fieldset>


    <!-- Textarea -->
  <div class="form-group">
    <div class="col-md-12">
      <textarea class="form-control" id="textarea" name="body" placeholder="Enter a new Mem...
      This could be 20 spanish words you want to learn...
      Or a reminder to go swimming...
      Or that new band your friend Wilma just recommended..." required></textarea>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-12">
      <select name="tag_list" class="form-control">
        <option value="null">untagged</option>
        <% @user_info.user_tags.each do |tag| %>
          <option value="<%= tag %>"><%= tag %></option>
        <% end %>
      </select>
      </ul>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-12">
      <div class="btn-group" role="group" title="Choose a priority for your mem to send it into the stack">
        <button type='submit' id="priority1" name="priority" value="2" class="btn btn-warning btn-sm">Low</button>
        <button type='submit' id="priority2" name="priority" value="3" class="btn btn-info btn-sm">Medium</button>
        <button type='submit' id="priority3" name="priority" value="4" class="btn btn-success btn-sm">High</button>
      </div>
      <div class="btn-group" role="group" title="Choose a date to be alerted about your mem">
        <button type='submit' id="date0" name="date_show" value="<%= @today %>" class="btn btn-primary btn-sm">Today</button>
        <button type='submit' id="date1" name="date_show" value="<%= @tomorrow %>" class="btn btn-primary btn-sm">Tomorrow</button>
        <button type='submit' id="date2" name="date_show" value="<%= @three_days %>" class="btn btn-primary btn-sm">3 days</button>
        <button type='submit' id="date3" name="date_show" value="<%= @week %>" class="btn btn-primary btn-sm">Week</button>
        <button type='submit' id="date4" name="date_show" value="<%= @two_weeks %>" class="btn btn-primary btn-sm">2 weeks</button>
        <button type='submit' id="date5" name="date_show" value="<%= @month %>" class="btn btn-primary btn-sm">Month</button>
      </div>
    </div>
  </div>

  </fieldset>
</form>

