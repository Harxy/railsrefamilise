
<form id='note' class="form-horizontal" method="POST" action="/notes" >
  <fieldset>


    <!-- Textarea -->
  <div class="form-group">
    <div class="col-md-12">
      <textarea class="form-control" id="textarea" name="body" placeholder="Enter a new Mem...
      This could be 20 spanish words you want to learn...
      Or a reminder to go swimming...
      Or that new band your friend Wilma just recommended..." required></textarea>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-12">
      <input id="tokenfield" name="tag_list" type="text" placeholder="tags (maximum 3)" class="form-control input-md" required />

    </div>
  </div>

  <div class="form-group">
    <div class="col-md-12">
      <div class="btn-group" role="group">
        <button type='submit' id="priority1" name="priority" value="1" class="btn btn-warning">Low</button>
        <button type='submit' id="priority2" name="priority" value="2" class="btn btn-info">Medium</button>
        <button type='submit' id="priority3" name="priority" value="3" class="btn btn-success">High</button>
      </div>
      <div class="btn-group" role="group">
        <button type='submit' id="date1" name="date_show" value="<%= @tomorrow %>" class="btn btn-primary">Tomorrow</button>
        <button type='submit' id="date2" name="date_show" value="<%= @week %>" class="btn btn-primary">Week</button>
        <button type='submit' id="date3" name="date_show" value="<%= @two_weeks %>" class="btn btn-primary">2 weeks</button>
        <button type='submit' id="date4" name="date_show" value="<%= @month %>" class="btn btn-primary">Month</button>
      </div>
    </div>
  </div>

  </fieldset>
</form>

