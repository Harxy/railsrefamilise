<form id='note' class="form-horizontal" method="POST" >
  <fieldset>

    <!-- Form Name -->
  <h4>Bank a new mem</h4>

  <!-- Text input-->
  <div class="form-group">
    <label class="col-md-2 control-label" for="textinput">Label</label>
    <div class="col-md-8">
      <input id="textinput" name="title" type="text" placeholder="label" class="form-control input-md" required>

    </div>
  </div>

  <!-- Textarea -->
  <div class="form-group">
    <label class="col-md-2 control-label" for="textarea">Contents</label>
    <div class="col-md-8">
      <textarea class="form-control" id="textarea" name="body" placeholder="Enter Mem..." required></textarea>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-2 control-label" for="button1id">Bank it</label>
    <div class="col-md-8">
      <div class="btn-group" role="group">
        <button type='submit' id="priority1" name="priority" value="1" class="btn btn-warning">1</button>
        <button type='submit' id="priority2" name="priority" value="2" class="btn btn-info">2</button>
        <button type='submit' id="priority3" name="priority" value="3" class="btn btn-success">3</button>
      </div>
      <div class="btn-group" role="group">
        <button type='submit' id="date1" name="date_show" value="<%= @tomorrow %>" class="btn btn-primary">Tomorrow</button>
        <button type='submit' id="date2" name="date_show" value="<%= @week %>" class="btn btn-primary">Week</button>
        <button type='submit' id="date3" name="date_show" value="<%= @two_weeks %>" class="btn btn-primary">2 weeks</button>
        <button type='submit' id="date4" name="date_show" value="<%= @month %>" class="btn btn-primary">Month</button>
      </div>
    </div>
  </div>

  </fieldset>
</form>

